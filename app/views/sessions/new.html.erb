<h1>Sessions#new</h1>

<% if flash[:errors] %>
    <div class="errors">
        <h4>Oops!</h4>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
    </div>
<% end %>
<% if flash[:notice] %>
    <h1><%= flash[:notice] %></h1>
<% end %>

<h1>Log in</h2>

<%= form_tag sessions_path do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Log In!"%>
<% end %>
