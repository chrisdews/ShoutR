




<section class="hero is-fullheight is-desktop is-primary is-bold">
  <br>
  


  <div>
        <div class="columns">
          <div class="column is-6 is-offset-3">
            <h2 class="subtitle has-text-centered has-text-weight-bold">
              <%= image_tag "shoutr.png", style:'width:400px'%>
              <div>
                <span class="no-wrap"> Shout yo thoughts </span>
              </div>
            </h2>
          </div>
        </div>


        <div class="columns">
          <div class="column is-4 is-offset-4">
          <section class="hero landing-left">
            <div>
            
     
              

      <div class="field">
       <%= form_for(@user, :html => {:class => 'field'}) do |f| %>
        <div class="control">
            <%= f.label :username, class:"label"  %>
            <%= f.text_field :username, class:"input" %>
            <%# <p class="help">This username is available</p> %>

            <%= f.label :password, class:"label" %>
            <%= f.password_field :password, class:"input" %>

            <%= f.label :email, class:"label" %>
            <%= f.email_field :email, class:"input" %>

            <%= f.label :date_of_birth, class:"label" %>
            <%= f.date_field :date_of_birth, class:"input" %>
        </div>
            <br>

            <%= f.submit "Sign Up", class:"button is-link"%>
            
       <% end %>

       <br>
       <p>already have an account? <a href="/login">Log In</a></p>
       <% if flash[:errors] %>
        <div class="errors">
        <h4>Oops!</h4>
        <% flash[:errors].each do |error| %>
            <p><%= error %></p>
        <% end %>
      </div>
      <% end %>
      
    <div class="column" style="margin-bottom: 20%">
    </div>
    

  </div>
</section>


