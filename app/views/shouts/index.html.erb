<div>
    <div class="columns has-background-primary">
      <div class="column is-one-half outline is-offset-2" style="margin:10px; margin-left:5%; margin-right:5%">
       <div class="columns">
        <div class="is-size-3 column has-text-centered has-text-white"><h1> OMG Look at all these SHOUTS</h1>
        </div>
       </div>

        <% @shouts.reverse.each do |shout| %>
          <div class="box has-background-white-ter box-shadow">
            <article class="media">
                <div class="media-left">
                <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                </figure>
                </div>
                <div class="media-content">
                <div class="content">
                    <p>
                    <strong><%= shout.user.username %></strong> <small>31m</small>
                    <br>
                    <%= shout.text %>
                    </p>
                    <p>
                    <small><%= shout.likes.count %> Likes || <%= link_to "#{shout.comments.count} Comments", shout %> </small>
                    </p>
                    <% if shout.has_like?(@user) %>
                      <%= form_for shout, url: unlikeindex_shout_path(shout) do |f| %>
                      <a class="level-item" aria-label="like">
                        <span class="icon is-small">
                         <%= f.submit "Unlike", class:"fas fa-heart" %>
                        </span>
                      </a>
                      <% end %>
                    <% else %>
                     <%= form_for shout, url: likeindex_shout_path(shout) do |f| %>
                      <%= f.submit "Like" %>
                     <% end %>
                    <% end %> </h4>
                </div>
                <nav class="level is-mobile">
                    <div class="level-left">

                    <a class="level-item" aria-label="like">
                        <span class="icon is-small">
                        <i class="fas fa-heart" aria-hidden="true"></i>
                        </span>
                    </a>
                    <a class="level-item" aria-label="reply">
                        <span class="icon is-small">
                        <i class="fas fa-reply" aria-hidden="true"></i>
                        </span>
                    </a>
                    
                    
                    </div>
                </nav>
                </div>
            </article>
          </div>





        <% end %>
      </div>

      <div class="is-size-3 column has-text-centered has-text-white" style="margin-right:5%">Top Shouts</div>
      </div>
    </div>






</div>
