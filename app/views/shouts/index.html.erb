<div>
    <div class="columns has-background-primary">
      <div class="column is-one-half outline is-offset-2" style="margin:10px; margin-left:5%; margin-right:5%">
       <div class="columns">
        <div class="is-size-3 column has-text-centered has-text-white"><h1> OMG Look at all these SHOUTS</h1>
        </div>
       </div>

        <% @shouts.reverse.each do |shout| %>
          <div class="box has-background-white-ter box-shadow">
            <article class="media">
                <div class="media-left">
                <figure class="image is-64x64">
                    <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                </figure>
                </div>
                <div class="media-content">
                <div class="content">
                    <p>
                    <strong><%= shout.user.username %></strong> <small> <%= shout.time_mark %> </small>
                    <br>
                    <%= shout.text %>
                    </p>
                    <p>
                    <small><%= shout.likes.count %> Likes || <%= link_to "#{shout.comments.count} Comments", shout %> </small>
                    </p>


                    <div class="columns">
                      <div class="column is-1">
                        <% if shout.has_like?(@user) %>
                            <%= form_for shout, url: unlikeindex_shout_path(shout) do |f| %>
                         <%= f.button'<i class="fas fa-heart fa-2x" aria-hidden="true"></i>'.html_safe, class: "level-item", id: "unlike" %>

                         <% end %>
                        <% else %>
                         <%= form_for shout, url: likeindex_shout_path(shout) do |f| %>
                          <%= f.button'<i class="fas fa-heart fa-2x" aria-hidden="true"></i>'.html_safe, class: "level-item", id: "like" %>
                        <% end %>


                        <% end %>
                      </div>
                      <div class="column is-2 ">

                        <%= link_to '<i class="fas fa-reply fa-lg"></i>'.html_safe, shout_path(shout), id:"comment" %>
                      </div>

                    </div>
                </div>

                </div>
            </article>
          </div>





        <% end %>
      </div>


      <div class="is-size-3 column has-text-centered has-text-white" style="margin-right:5%">

        Top Shouts


      <%= form_tag(shouts_path, method: :post) do %>
          <%= hidden_field_tag :user_id, @user.id %>
          What would you like to shout?: <input type="text" name="text"><br>
          <%= submit_tag "Shout" %>
      <% end %>
      </div>
      </div>
    </div>






</div>
