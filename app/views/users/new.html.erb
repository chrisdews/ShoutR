




<section class="hero is-fullheight is-desktop is-primary is-bold">
  <div class="hero-body columns">
      <div class="column">
      </div>
      <div class="column">
       <h1 class="title is-1">
        ShoutR
       </h1>
       <h2 class="subtitle is-4">
        show us what you got
       </h2>
     </div>

     
      <div class="field column">
       <%= form_for(@user, :html => {:class => 'field'}) do |f| %>
        <div class="control">
            <%= f.label :username, class:"label"  %>
            <%= f.text_field :username, class:"input" %>
            <p class="help">This username is available</p>

            <%= f.label :password, class:"label" %>
            <%= f.password_field :password, class:"input" %>

            <%= f.label :email, class:"label" %>
            <%= f.email_field :email, class:"input" %>

            <%= f.label :date_of_birth, class:"label" %>
            <%= f.date_field :date_of_birth, class:"input" %>
        </div>
            <br>

            <%= f.submit "Sign Up", class:"button is-link"%>
            
       <% end %>

       <br>
       <p>already have an account? <a href="/login">Log In</a></p>
       <% if flash[:errors] %>
        <div class="errors">
        <h4>Oops!</h4>
        <% flash[:errors].each do |error| %>
            <p><%= error %></p>
        <% end %>
      </div>
      <% end %>
      <div class="column">
      </div>
     <div class="column">
      </div>
  </div>
</section>


